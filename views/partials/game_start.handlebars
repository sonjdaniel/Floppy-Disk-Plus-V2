{{! IF NO GAME IN PROGRESS }}
{{#unless game.isCurrent}}
  <div class='row d-flex flex-column background'>
    <div
      class='col-2 container-fluid d-flex justify-content-center text-nowrap'
    >
      <br></br><h3 class='white-text'>Select a starter pokemon!</h3><br></br>
    </div>
    <div class='col-10 container-fluid'>
        <div class="row d-flex flex-row justify-content-around">
            <div class="card card-char" style="width: 16rem;">
                <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/4.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text card-text-white">Moves: Tackle</p> {{!-- add some stats here --}}
                <button class="btn btn-danger" id="charmander">Pick Charmander!</button>
                </div>
            </div>
                <div class="card card-squirt" style="width: 16rem;">
                <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/7.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text card-text-white">Moves: Tackle</p> {{!-- add some stats here --}}
                <button class="btn btn-primary" id="squirtle">Pick Squirtle!</button>
                </div>
            </div>
                <div class="card card-bulba" style="width: 16rem;">
                <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/1.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text card-text-white">Moves: Tackle</p> {{!-- add some stats here --}}
                <button class="btn btn-success" id="bulbasaur">Pick Bulbasaur!</button>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
{{else}}
<div class="background">
  <img
    class='position-absolute top-50 start-50 translate-middle'
    src='/images/game_start_continue.png'
    id='continue_game'
  />
</div>
  {{!-- <button class="btn btn-success" id="new_game">New game</button> --}}
{{/unless}}
<script src='/js/play/start.js'></script>